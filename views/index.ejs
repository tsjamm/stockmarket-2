<%- include templates/partialHead.ejs %>
<body class="background">
	
	<main>
		<span id="loginTitle">EasyFinances</span>
		<div class="container-fluid">
	
			<div class="row-fluid">
				<div class="loginForm panel panel-default col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1 ">
					<div class="panel-body">
						<form method="POST" action="/index">
						 <div class="form-group">
							<div class="input-group">
								<span class="input-group-addon" id="mailLabel">
									<i class="fa fa-envelope"></i>
								</span>
								<input type="email" class="form-control" name="email" placeholder="email@example.com" aria-describedby="mailLabel" autofocus required/>
							</div>
						</div>
						<div class="form-group">			
							<div class="input-group">
								<span class="input-group-addon" id="passwordLabel">
									<i class="fa fa-key"></i>
								</span>
								<input type="password" class="form-control" name="password" aria-describedby="passwordLabel" required/>
							</div>
							</div>
							<div class="text-right">
								<small class="text-right">
									<a href="#modalRegister" data-toggle="modal">Register</a>
									<span>|</span>
									<a href="#modalRecover" data-toggle="modal">Can't access?</a>
								</small>
								<button type="submit" class="btn btn-warning" name="login">Login</button>
							</div>
							
						</form>
					</div>
				</div>
			</div>
		</div>

		<div class="row-fluid">
			<% if(typeof errorMessage!='undefined') { %>
				<span class="errorMessage panel panel-default col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-10 col-xs-offset-1">
					<%= errorMessage %>
				</span>
			<% } %>
		</div>

		<div class="row-fluid">
			<% if(typeof infoMessage!='undefined') { %>
				<span class="infoMessage panel panel-default col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-8 col-xs-offset-2">
					<%= infoMessage %>
				</span>
			<% } %>
		</div>	

		<div class="modal modal-fade" id="modalRegister">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						<h3>Register</h3>
					</div>

					<div class="modal-body">
						<form method="POST" action="/register" enctype="multipart/form-data">
							<div class="form-group">
								<label for="email">Email</label>
								<input type="email" class="form-control" name="email" placeholder="account@account.com" required/>
							</div>
							<div class="form-group">
								<label for="password">Password</label>
								<input type="password" class="form-control" name="password" required/>
							</div>
							<div class="form-group">
								<label for="name">Name</label>
								<input type="text" class="form-control" name="name" placeholder="Name" required/>
							</div>
							<div class="form-group">
								<label for="lastname">Lastname</label>
								<input type="text" class="form-control" name="lastname" placeholder="Lastname" required/>
							</div>
							<div class="form-group">
								<label for="avatarURL">Avatar (PNG File)</label>
								<input type="file" class="form-control" name="avatarURL" accept=".png" placeholder="avatarURL"/>
							</div>
					</div>

					<div class="modal-footer">
						<div class=" text-rigth">
							<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
							<button type="submit" class="btn btn-info" name="register"> Register</button>
						</div>
						</form>
							
					</div>
				</div>
			</div>
		</div>


		<div class="modal modal-fade" id="modalRecover">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						<h3>Password recovery</h3>
					</div>
					<div class="modal-body">
						<form method="POST" action="/sendPassword">
						 <div class="form-group">
							<div class="input-group">
								<span class="input-group-addon" id="mailLabel">
									<i class="fa fa-envelope"></i>
								</span>
								<input type="mail" class="form-control" name="email" placeholder="your@email.com" aria-describedby="mailLabel" autofocus required/>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
						<button type="submit" class="btn btn-info" name="recover"> Recover</button>
					</div>
					</form>
				</div>
			</div>
		</div>

	</main>

</body>
</html>


